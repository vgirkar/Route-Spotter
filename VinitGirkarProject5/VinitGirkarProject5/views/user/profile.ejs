
<%- include('../partials/header.ejs')%>
<div class="content">
    <div class="center-container mb-100">
        <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 30px; border-radius: 12px; margin-bottom: 40px; text-align: center;">
            <h1 style="margin: 0 0 10px 0; font-size: 32px;">ğŸ‘¤ <%= user.firstName %>'s Profile</h1>
            <p style="margin: 0; opacity: 0.9; font-size: 16px;"><%= user.firstName %> <%= user.lastName %></p>
        </div>

        <!-- Hosted Connections Section -->
        <h2 style="color: #667eea; margin-top: 0; padding-bottom: 15px; border-bottom: 3px solid #667eea; display: inline-block;">ğŸ¯ Connections You're Hosting</h2>
        
        <% if(connections.length){ %>
            <div style="display: grid; gap: 15px; margin: 20px 0;">
                <% connections.forEach(connection => { %>
                    <div style="background: #f8f9fa; padding: 20px; border-radius: 12px; border-left: 4px solid #667eea; display: flex; justify-content: space-between; align-items: center; transition: all 0.3s ease;">
                        <div style="flex: 1;">
                            <h4 style="margin: 0 0 8px 0; color: #333;"><%= connection.name %></h4>
                            <p style="margin: 0; color: #666; font-size: 14px;">
                                <strong>Category:</strong> <%= connection.topic %> | 
                                <strong>Date:</strong> <%= connection.date %>
                            </p>
                        </div>
                        <div style="display: flex; gap: 10px;">
                            <a href="/connections/<%= connection._id %>/edit" class="button update-btn" style="margin: 0;">âœï¸ Edit</a>
                            <form method="POST" action="/connections/<%= connection._id %>?_method=DELETE" style="display: inline;">
                                <button class="button delete-btn" type="submit" onclick="return confirm('Delete this connection?')" style="margin: 0;">ğŸ—‘ï¸ Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div style="background: #f8f9fa; padding: 20px; border-radius: 12px; text-align: center; color: #999; margin: 20px 0;">
                <p>ğŸ“­ You haven't created any connections yet. <a href="/connections/new" style="color: #667eea; font-weight: 600;">Create one now</a>!</p>
            </div>
        <% } %>

        <!-- RSVP Section -->
        <h2 style="color: #764ba2; margin-top: 40px; padding-bottom: 15px; border-bottom: 3px solid #764ba2; display: inline-block;">ğŸ“‹ Events You're Attending</h2>
        
        <% if(rsvps.length){ %>
            <div style="display: grid; gap: 15px; margin: 20px 0;">
                <% rsvps.forEach(rsvp => { %>
                    <div style="background: #f8f9fa; padding: 20px; border-radius: 12px; border-left: 4px solid #764ba2; display: flex; justify-content: space-between; align-items: center; transition: all 0.3s ease;">
                        <div style="flex: 1;">
                            <h4 style="margin: 0 0 8px 0; color: #333;"><%= rsvp.connection.name %></h4>
                            <p style="margin: 0; color: #666; font-size: 14px;">
                                <strong>Category:</strong> <%= rsvp.connection.topic %> | 
                                <strong>Status:</strong> 
                                <% if(rsvp.status === 'Yes') { %>
                                    <span style="background: #d4edda; color: #155724; padding: 2px 8px; border-radius: 4px; font-weight: 600;">âœ… Going</span>
                                <% } else if(rsvp.status === 'Maybe') { %>
                                    <span style="background: #fff3cd; color: #856404; padding: 2px 8px; border-radius: 4px; font-weight: 600;">â“ Maybe</span>
                                <% } else { %>
                                    <span style="background: #f8d7da; color: #721c24; padding: 2px 8px; border-radius: 4px; font-weight: 600;">âŒ Not Going</span>
                                <% } %>
                            </p>
                        </div>
                        <div style="display: flex; gap: 10px;">
                            <a href="/connections/<%= rsvp.connection._id %>" class="button update-btn" style="margin: 0;">ğŸ‘ï¸ View</a>
                            <form method="POST" action="/connections/rsvp/<%= rsvp._id %>?_method=DELETE" style="display: inline;">
                                <button class="button delete-btn" type="submit" onclick="return confirm('Remove RSVP?')" style="margin: 0;">ğŸ—‘ï¸ Remove</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div style="background: #f8f9fa; padding: 20px; border-radius: 12px; text-align: center; color: #999; margin: 20px 0;">
                <p>ğŸ“ You haven't RSVP'd to any events yet. <a href="/connections" style="color: #667eea; font-weight: 600;">Explore connections</a>!</p>
            </div>
        <% } %>
    </div>
</div>
